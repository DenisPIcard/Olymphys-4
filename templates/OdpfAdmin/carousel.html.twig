
<div class = "container-fluid ">



                <div id="carousel" class="carousel slide " data-ride="carousel" >
                    <div class="d-flex align-items-center flex-column" style="height: auto;">
                        <div class="p-2 ">
                            <div class="carousel-inner black" style="width:300px !important; height:200px !important ;" >
                                {% set i = 1 %}
                                {% if article.carousel!=null %}
                                    {% for image in article.carousel.images %}

                                            {% if i==1 %}

                                                    <div class="carousel-item active" data-interval="5000">

                                                        <div class="text-center"><img src=" {{asset('odpf-images/imagescarousels/'~image.name) }}"
                                                                     alt="{{image.coment}}" class="img-fluid" style="width:auto !important; height:200px !important ;">

                                                            <div class="carousel-caption d-none d-md-block" style="transform: translateY(50%);background:rgba(0, 0, 0, 0.0)">

                                                                <div class="smallsize">{{image.coment }}</div>
                                                            </div>
                                                        </div>

                                                    </div>
                                            {% endif %}
                                            {% if i>1%}
                                                    <div class="carousel-item" >

                                                        <div class="text-center"><img src=" {{asset('odpf-images/imagescarousels/'~image.name) }}"
                                                                      alt="{{image.coment}}" class="img-fluid" style="width:auto !important; height:200px !important ;">
                                                            <div class="carousel-caption d-none d-md-block" style="transform: translateY(50%); background:rgba(0, 0, 0, 0.0)">

                                                                <div class="smallsize">{{image.coment }}</div>
                                                            </div>

                                                        </div>

                                                    </div>

                                            {% endif %}
                                            {% set i= i+1 %}

                                    {% endfor %}
                                {% endif %}


                            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                                {# <span class="carousel-control-prev-icon" aria-hidden="false"></span>#}
                                <img src="{{ asset('/odpf-images/diapo-arwl-37x37.png') }}"/>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next" >
                                {# }<span class="carousel-control-next-icon" aria-hidden="false" ></span>-->#}
                                <img src="{{ asset('/odpf-images/diapo-arwr-37x37.png') }}"/>
                                <span class="sr-only">Next</span>
                            </a>
                            </div>
                        </div>
                    </div>
                </div>

</div>
