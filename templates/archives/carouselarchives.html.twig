<div class = "container-fluid">



    <div id="carousel{{concours }}{{edition_affichee.id}}" class="carousel slide " data-ride="carousel" >
        <div class="d-flex align-items-center flex-column text-center" style="height: 250px;">
            <div class="p-2 ">
                <div class="carousel-inner black align-content-center" style="width:250px !important; height:280px !important ;" >
                    {% set i = 1 %}

                    {% for photo in photoscarousel %}

                        {% if i==1 %}

                            <div class="carousel-item active align-content-center" data-interval="5000">

                                    <img src=" {{asset('upload/photos/thumbs/'~photo.photo) }}" title="{{photo.equipe.TitreProjet}}"
                                                              alt="{{photo.equipe.TitreProjet}}" class="img-fluid " style="width:auto !important; height:auto !important ;margin: auto;vertical-align: auto">

                                    <div class="carousel-caption d-none d-md-block" style="transform: translateY(50%);background:rgba(0, 0, 0, 0.0)">

                                        <div class="smallsize">{{photo.equipe.titreProjet }}</div>
                                    </div>


                            </div>
                        {% endif %}
                        {% if i>1%}
                            <div class="carousel-item align-content-center" >

                                    <img src=" {{asset('upload/photos/thumbs/'~photo.photo) }}" title="{{photo.equipe.TitreProjet}}"
                                                              alt="{{photo.equipe.TitreProjet}}" class="img-fluid" style="width:auto !important; height:auto !important ; margin: auto;vertical-align : auto">
                                    <div class="carousel-caption d-none d-md-block" style="transform: translateY(50%); background:rgba(0, 0, 0, 0.0)">

                                        <div class="smallsize">{{photo.equipe.titreProjet }}</div>


                                </div>

                            </div>

                        {% endif %}
                        {% set i= i+1 %}

                    {% endfor %}


                    <a class="carousel-control-prev" href="#carousel{{ concours }}{{edition_affichee.id}}" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel{{ concours }}{{edition_affichee.id}}" role="button" data-slide="next" >
                        <span class="carousel-control-next-icon" aria-hidden="true" ></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
